<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorWhite"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="46dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_pop_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/transparent"
			android:text="清除"
			android:textSize="16sp" />

		<Button
			android:id="@+id/txt_pop_title"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/transparent"
			android:gravity="center"
			android:text="选择查询时间"
			android:textColor="@color/colorTxt1"
			android:textSize="16sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/btn_pop_yes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/transparent"
			android:text="确定"
			android:textColor="@color/colorBlue"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="36dp"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/img_pop_year_last"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/db_arrow_left" />

		<View
			android:layout_width="10dp"
			android:layout_height="10dp" />

		<ImageView
			android:id="@+id/img_pop_month_last"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/arrow_left" />

		<View
			android:layout_width="10dp"
			android:layout_height="10dp" />

		<TextView
			android:id="@+id/txt_pop_yearmonth"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="2019年03月"
			android:textColor="@color/colorTxt1"
			android:textStyle="bold" />

		<View
			android:layout_width="10dp"
			android:layout_height="10dp" />

		<ImageView
			android:id="@+id/img_pop_month_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/arrow_right" />

		<View
			android:layout_width="10dp"
			android:layout_height="10dp" />

		<ImageView
			android:id="@+id/img_pop_year_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/db_arrow_right" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			style="@style/txt_item_style"
			android:text="日" />

		<TextView
			style="@style/txt_item_style"
			android:text="一" />

		<TextView
			style="@style/txt_item_style"
			android:text="二" />

		<TextView
			style="@style/txt_item_style"
			android:text="三" />

		<TextView
			style="@style/txt_item_style"
			android:text="四" />

		<TextView
			style="@style/txt_item_style"
			android:text="五" />

		<TextView
			style="@style/txt_item_style"
			android:text="六" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/colorLine" />

	<GridView
		android:id="@+id/grid_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:background="@color/colorWhite"
		android:numColumns="7" />
</LinearLayout>